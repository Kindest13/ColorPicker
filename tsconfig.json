{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}